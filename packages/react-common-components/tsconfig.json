{
	"include": ["src", "../../types"],
	"compilerOptions": {
		"module": "esnext",
		"lib": [ "es6", "dom", "esnext" ],
		"declaration": true,
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"baseUrl": "."
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
